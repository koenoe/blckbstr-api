(function() {
  'use strict';

  angular
    .module('app.home')
    .run(appRun);

  /* @ngInject */
  function appRun(routehelper) {
    routehelper.configureRoutes(getRoutes());
  }

  function getRoutes() {
    return [
      {
        url: '/',
        config: {
          templateUrl: '<%= asset_path("app/home/home.html") %>',
          controller: 'Home',
          controllerAs: 'vm'
        }
      },
      {
        url: '/movie',
        config: {
          templateUrl: '<%= asset_path("app/movie/movie.html") %>',
          controller: 'Home',
          controllerAs: 'vm'
        }
      },
    ];
  }
})();
